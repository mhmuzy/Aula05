@model Projeto.Presentation.Models.FuncionarioCadastroModel

@{
    ViewData["Title"] = "Cadastro";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h4>Cadastro de Funcionário</h4>
Preencha os campos abaixo para incluir um novo funcionário
<hr />

@using (Html.BeginForm())
{
    <!-- campo nome -->
    <div class="form-group">
        <label>Nome do Funcionário:</label>
        @Html.TextBoxFor(model => model.Nome,
        new
        {
            @class = "form-control col-md-4",
            @placeholder = "Digite aqui",
            @autocomplete = "off"
        })
        <span class="text-danger">
            @Html.ValidationMessageFor(model => model.Nome)
        </span>
    </div>
    <!-- campo email -->
    <div class="form-group">
        <label>E - mail:</label>
        @Html.TextBoxFor(model => model.Email,
        new
        {
            @class = "form-control col-md-4",
            @placeholder = "Digite aqui",
            @autocomplete = "off"
        })
        <span class="text-danger">
            @Html.ValidationMessageFor(model => model.Email)
        </span>
    </div>
    <!-- campo data de admissão -->
    <div class="form-group">
        <label>Data de Admissão:</label>
        @Html.TextBoxFor(model => model.DataAdmissao,
        new
        {
            @class = "form-control col-md-4",
            @placeholder = "Digite aqui",
            @autocomplete = "off",
            @type = "date"
        })
        <span class="text-danger">
            @Html.ValidationMessageFor(model => model.DataAdmissao)
        </span>
    </div>
    <!-- campo salário -->
    <div class="form-group">
        <label>Salário:</label>
        @Html.TextBoxFor(model => model.Salario,
        new
        {
            @class = "form-control col-md-4",
            @placeholder = "Digite aqui",
            @autocomplete = "off"
        })
        <span class="text-danger">
            @Html.ValidationMessageFor(model => model.Salario)
        </span>
    </div>

    <div class="form-group">
        <input type="submit" value="Cadastrar Funcionário"
               class="btn btn-success btn-sm"/>
        
        <input type="reset" value="Limpar"
               class="btn btn-secondary btn-sm" />
    </div>
}
